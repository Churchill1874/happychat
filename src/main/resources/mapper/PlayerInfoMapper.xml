<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ent.happychat.mapper.PlayerInfoMapper">

    <update id="reduceBalance">
        UPDATE player_info SET balance = balance - #{amount} WHERE id = #{playerId}
    </update>


</mapper>
