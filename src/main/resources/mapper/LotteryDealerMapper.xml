<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ent.happychat.mapper.LotteryDealerMapper">

    <update id="reduceRemainingPricePool">
        UPDATE lottery_dealer SET remaining_price_pool = remaining_price_pool - #{amount} WHERE id = #{id}
    </update>


</mapper>
